{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "ES2022", "es2021", "DOM"],
    "allowJs": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noEmit": false,
    "noEmitOnError": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "jsx": "react",
    "jsxFactory": "$",
    "jsxFragmentFactory": "$",
    "paths": {
      "@xwat/xwat": ["./xwat/src"],
      "@xwat/build": ["./xwat-build/src"],
      "@xwat/lena": ["./xwat-lena/src"],
      "@xwat/wabt": ["./xwat-wabt/src"],
      "@xwat/vm": ["./xwat-vm/src"],
      "@xwat/leb128": ["./xwat-leb128/src"],
      "@xwat/gl-matrix": ["./xwat-gl-matrix/src"],
      "@xwat/gpu": ["./xwat-gpu/src"],
      "@xwat/feature-detect": ["./xwat-feature-detect/src"]
    }
  }
}
